<div class="container">
  <br><h1>ユーザー情報の編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_field :name, class: "form-control", placeholder: "Enter your name", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label "新しいパスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字まで)</em>
    <% end %>
    <%= f.password_field :password, class: "form-control", placeholder: "New Password", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "One more…", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "現在のパスワード" %><br />
    <%= f.password_field :current_password, class: "form-control", placeholder: "Current Password", autocomplete: "current-password" %>
  </div><br><br>

  <div class="actions">
    <%= f.submit "更新する", class: "btn btn-primary btn-lg btn-block" %>
  </div>
  <% end %><br>

  <h3>アカウントの削除</h3>
  <%= button_to "削除する", registration_path(resource_name), class: "btn btn-danger btn-block", data: { confirm: "アカウントを削除してよろしいでしょうか？" }, method: :delete %>
</div>