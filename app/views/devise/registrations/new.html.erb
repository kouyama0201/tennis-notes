<div class="user-form">
  <div class="user-form__main"><br>
    <h1>新規アカウント</h1>

    <div class="container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-parts form-group">
        <%= f.label "ユーザー名" %><br />
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your Name" %>
      </div>

      <div class="form-parts form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autocomplete: "email" %>
      </div>

      <div class="form-parts form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字まで)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "new-password" %>
      </div>

      <div class="form-parts form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "One more…", autocomplete: "new-password" %>
      </div><br>

      <div class="actions">
        <%= f.submit "アカウントを作成する", class: "btn btn-primary btn btn-block" %>
      </div>
      <% end %><br>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <%= image_tag "tennis-signup.jpg", size: "720x635" %>
</div>
