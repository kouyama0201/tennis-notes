<!DOCTYPE html>
<html>
  <head>
    <title>TennisPracticePlus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <a class="navbar-brand" href="/">TennisPracticePlus</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item active">
            <%= link_to current_user.name, user_path(current_user), method: :get, class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to '新規投稿', new_log_path, method: :get, class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to 'LogOut', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item active">
              <%= link_to 'LogIn', new_user_session_path, method: :get, class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to 'SignUp', new_user_registration_path, method: :get, class: "nav-link" %>
            </li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
