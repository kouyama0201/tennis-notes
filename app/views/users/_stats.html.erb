<% @user ||= current_user %>
<div class="stats">
  <span><%= link_to "投稿一覧", user_path(@user), class: "posts" %></span>
  &nbsp;

  <a class="follow" href="<%= following_user_path(@user) %>">
    <strong class="stat" id="following">
      <%= @user.followings.count %>
    </strong>
    フォロー
  </a>
  &nbsp;

  <a class="follow" href="<%= followers_user_path(@user) %>">
    <strong class="stat" id="followers">
      <%= @user.followers.count %>
    </strong>
    フォロワー
  </a>
</div>
