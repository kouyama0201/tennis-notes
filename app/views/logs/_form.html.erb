<%= form_with model: @log, id: "log-form", local: true do |f| %>
  <div class="form-left">
    <div class="form-left__day">
      <%= f.label "練習日" %>
        <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
          <%= f.text_field :practice_day, class: "datetimepicker-input form-control text-center", autocomplete: "off" %>
            <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
            </div>
        </div>
        <script type="text/javascript">
          $(function () {
            $('#datetimepicker4').datetimepicker({
                format: 'L'
            });
          });
        </script>
      <div id="log_practice_day_error"></div>
    </div>
    <div class="form-left__times">
      <%= f.label "練習時間（分）" %>
        <div class="form-left__times__wrap">
          <%= f.label "サーブ", class: "form-left__times__wrap__list" %>
          <%= f.text_field :serve, class: "form-left__times__wrap__list--field", autocomplete: "off" %>
        </div>
        <div class="form-left__times__wrap">
          <%= f.label "スマッシュ", class: "form-left__times__wrap__list" %>
          <%= f.text_field :smash, class: "form-left__times__wrap__list--field", autocomplete: "off" %>
        </div>
        <div class="form-left__times__wrap">
          <%= f.label "ボレー", class: "form-left__times__wrap__list" %>
          <%= f.text_field :volley, class: "form-left__times__wrap__list--field", autocomplete: "off" %>
        </div>
        <div class="form-left__times__wrap">
          <%= f.label "ストローク", class: "form-left__times__wrap__list" %>
          <%= f.text_field :stroke, class: "form-left__times__wrap__list--field", autocomplete: "off" %>
        </div>
        <div class="form-left__times__wrap">
          <%= f.label "ゲーム形式", class: "form-left__times__wrap__list" %>
          <%= f.text_field :game, class: "form-left__times__wrap__list--field", autocomplete: "off" %>
        </div>
    </div>
  </div>

  <div class="form-right">
    <%= f.label "テニスノート（練習メモ）" %><br>
    <%= f.text_area :text, rows: 19, cols: 65 %><br>
    <%= f.file_field :image %>
    <%= f.submit "記録する", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
