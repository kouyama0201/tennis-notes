<%= link_to '一覧へ戻る', "/" %>
<p>サーブ<%= @log.serve %>分</p>
<p>スマッシュ<%= @log.smash %>分</p>
<p>ボレー<%= @log.volley %>分</p>
<p>ストローク<%= @log.stroke %>分</p>
<p>ゲーム形式<%= @log.game %>分</p>
<p><%= @log.text %></p>
<p><%= image_tag @log.image.to_s %></p>
<p><%= @log.created_at.strftime('%Y/%m/%d %H:%M') %></p>

<% if current_user %>
  <%= form_with model:[@log, @comment], local: true do |f| %>
    <%= f.label "コメント" %>
    <br>
    <%= f.text_area :text, cols: "60" %>
    <%= f.submit "送信" %>
  <% end %>
<% end %>

<div class="comments">   
  <h4>＜コメント一覧＞</h4>
  <% if @comments %>
    <% @comments.each do |comment| %>
      <p>
        <strong><%= link_to comment.user.name, "/users/#{comment.user_id}" %>：</strong>
        <%= comment.text %>
      </p>
    <% end %>
  <% end %>
</div>